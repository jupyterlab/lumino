{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "./types",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "outDir": "lib",
    "rootDir": "src",
    "lib": [
      "dom",
      "es6"
    ],
    "importHelpers": true,
    "types": []
  },
  "include": [
    "src/*"
  ],
  "references": [
    {
      "path": "../signaling"
    }
  ]
}
