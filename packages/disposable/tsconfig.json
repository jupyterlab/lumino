{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "./types",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "module": "ES6",
    "moduleResolution": "node",
    "target": "ES5",
    "rootDir": "src",
    "outDir": "lib",
    "lib": [
      "ES5",
      "ES2015.Collection",
      "ES2015.Iterable"
    ],
    "importHelpers": true,
    "types": []
  },
  "include": [
    "src/*"
  ],
  "references": [
    {
      "path": "../algorithm"
    },
    {
      "path": "../signaling"
    },
  ]
}
